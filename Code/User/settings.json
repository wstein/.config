{
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[shellscript]": {
        "editor.tabSize": 4,
        "files.eol": "\n"
    },
    "[sql]": {
        "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "'FiraCode NFM', 'FiraCode NF', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": "'ss04', 'ss06', 'ss07'", // => >= <=
    "editor.formatOnSave": true, 
    "editor.formatOnSaveMode": "modifications",
    "editor.guides.bracketPairs": "active",
    "editor.suggestSelection": "first",
    "editor.tokenColorCustomizations": {
        "[*]": {
            "comments": "#FF6E6E" // Highlight Comments! 
        },
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic bold"
                }
            }
        ]
    },
    "eslint.run": "onSave",
    "extensions.autoUpdate": false,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.idea": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.zsh_history*": true,
        "**/node_modules": true,
        "**/package-lock.json": true
    },
    "files.watcherExclude": {
        "**/.ammonite": true,
        "**/.bloop": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.metals": true,
        "**/node_modules/*/**": true,
        "**/target": true
    },
    "git.autofetch": true,
    "redhat.telemetry.enabled": false,
    "rewrap.reformat": true,
    "rewrap.wrappingColumn": 120,
    "shellcheck.customArgs": [],
    "shellformat.effectLanguages": [
        "shellscript",
        "dockerfile",
        "dotenv",
        "hosts",
        "jvmoptions",
        "ignore",
        "gitignore",
        "properties",
        "spring-boot-properties",
        "azcli"
    ],
    "svg.preview.mode": "svg",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "terminal.integrated.tabs.enabled": false,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "yaml.format.enable": true,
    "workbench.settings.useSplitJSON": false,
    "editor.inlineSuggest.enabled": true,
    "yaml.customTags": [
        "!encrypted/pkcs1-oaep scalar",
        "!vault scalar"
    ],
    "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor"
    },
    // configure podman as default container runtime
    "docker.dockerPath": "podman",
    "dev.containers.dockerPath": "podman",
    "docker.host": "unix:///run/user/1000/podman/podman.sock",
    "docker.explorerRefreshInterval": 5000,

    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "docker.containers.label": "ContainerName",
    "docker.containers.description": [
        "RepositoryNameAndTag",
        "Status"
    ],
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
}
